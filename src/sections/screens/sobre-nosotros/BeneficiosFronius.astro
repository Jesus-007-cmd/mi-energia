---

const beneficiosList = [
  { title:'Calidad y Sostenibilidad', p:'Fronius es reconocida con premios como el Intersolar Award y Smarter E.' },
  { title:'Capacitación Continua', p:'Nos aseguramos de ofrecer la mejor calidad gracias a nuestra formación constante.' },
  { title:'Soporte técnico directo', p:'Asesoramiento profesional y productos de alta calidad garantizados.' }
];

---

<section class="bg-gray-50 text-center flex flex-col gap-8 p-8 md:p-16 lg:px-40 xl:px-60 rounded-lg shadow-lg">

  <h2 class="text-3xl font-bold text-gray-800">Beneficios</h2>

  <div class="grid gap-6 grid-cols-1 md:grid-cols-2">
    {beneficiosList.map((row, index) => 
      <div class={`border border-gray-200 rounded-lg flex flex-col p-6 bg-gradient-to-br from-blue-50 to-blue-100 shadow-md transition-transform transform hover:scale-105 hover:shadow-lg ${(index === 1) ? 'row-span-2' : '' }`}>
        
        <!-- Título con estilo destacado -->
        <h3 class="font-semibold text-lg text-blue-700 mb-2">{row.title}</h3>

        <!-- Descripción con color suave -->
        <p class="text-gray-600">{row.p}</p>
      </div>
    )}
  </div>

</section>
