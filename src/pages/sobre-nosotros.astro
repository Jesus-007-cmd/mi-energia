---

// Components
import Layout from '../layouts/Layout.astro';
import CustomGallery from '../sections/data/CustomGallery';
import BackgroundWithVideo from '../components/custom/BackgroundWithVideo.astro';
import BlackWhiteContainerWithImage from '../sections/data/BlackWhiteContainerWithImage.astro';

// Sections
import MisionVision from '../sections/screens/sobre-nosotros/MisionVision.astro';
import SobreNosotrosTitle from '../sections/screens/sobre-nosotros/SobreNosotrosTitle.astro';

// Types
import type { SectionRow } from '../sections/data/BlackWhiteContainerWithImage.astro';

const sectionRows:SectionRow[] = [
	{
		subtitle:'Sobre Nosotros',
		title:'Mi Energía MX',
		description:`
			Nos enfocamos en brindar calidad y buen servicio, utilizando los mejores productos del mercado. 
			Impulsamos la transición energética y descarbonización de México a través de soluciones energéticas 
			altamente rentables y eficientes que agregan valor a nuestros clientes reduciendo sus gastos fijos y 
			huella de carbono. Más de 30 años de experiencia en servicios de instalación energética.
		`,
		classImage:'first-row-image'
	},
	{
		subtitle:'Sobre Nosotros',
		title:'Beneficios',
		description:`
			Con nuestra asesoría experta, podrás reducir tus costos fijos y tú huella de carbono. 
			Recupera tu inversión de manera rápida eliminando costos de energía. 
			Además, te mostraremos cómo reducir tu consumo energético para seguir ahorrando a largo plazo.
		`,
		classImage:'second-row-image'
	}
];

const photos = [
    '/images/screens/sobre-nosotros/img1.jpg',
    '/images/screens/sobre-nosotros/img2.jpg',
    '/images/screens/sobre-nosotros/img3.jpg',
    '/images/screens/sobre-nosotros/img4.jpg',
    '/images/screens/sobre-nosotros/img5.jpg',
    '/images/screens/sobre-nosotros/img6.jpg',
    '/images/screens/sobre-nosotros/img7.jpg',
    '/images/screens/sobre-nosotros/img8.jpg',
    '/images/screens/sobre-nosotros/img9.jpg',
    '/images/screens/sobre-nosotros/img10.jpg',
    '/images/screens/sobre-nosotros/img11.jpg',
    '/images/screens/sobre-nosotros/img12.jpg',
    '/images/screens/sobre-nosotros/img13.jpg',
    '/images/screens/sobre-nosotros/img14.jpg',
    '/images/screens/sobre-nosotros/img15.jpg',
    '/images/screens/sobre-nosotros/img16.jpg',
  ];

---

<Layout title='Sobre Nosotros'>

  <BackgroundWithVideo
    url="https://blau-app-storage.s3.amazonaws.com/consultorias/mi-energia/MiEnergia-02.mov"
  />

  <SobreNosotrosTitle/>

  <BlackWhiteContainerWithImage sectionRows={sectionRows} />

  <MisionVision/>

	<CustomGallery photos={photos} client:visible/>

</Layout>